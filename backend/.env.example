# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=60

# Image Generation Backend (comfyui, automatic1111, fooocus, or pollinations)
IMAGE_BACKEND=pollinations

# ComfyUI (if using IMAGE_BACKEND=comfyui)
COMFYUI_URL=http://localhost:8188
COMFYUI_TIMEOUT=45

# Automatic1111 (if using IMAGE_BACKEND=automatic1111)
A1111_URL=http://localhost:7860
A1111_TIMEOUT=45

# Fooocus (if using IMAGE_BACKEND=fooocus)
FOOOCUS_URL=http://localhost:7865
FOOOCUS_TIMEOUT=45

# Pollinations Fallback
POLLINATIONS_FALLBACK=true

# Image Settings
IMAGE_WIDTH=1080
IMAGE_HEIGHT=1920
IMAGE_FORMAT=PNG

# RSS Settings
RSS_TIMEOUT=10
RSS_MAX_ITEMS=25

# Server Settings
API_HOST=127.0.0.1
API_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=INFO
